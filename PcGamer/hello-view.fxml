<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.pcgamer.Controller">

    <!-- Textos -->
    <Label text="Processador:" layoutX="10" layoutY="10"/>
    <Label text="SSD (GB):" layoutX="10" layoutY="40"/>
    <Label text="Placa de Vídeo (GPU):" layoutX="10" layoutY="70"/>
    <Label text="Memória RAM (GB):" layoutX="10" layoutY="100"/>
    <Label text="Fonte (Watts):" layoutX="10" layoutY="130"/>
    <Label text="Placa-mãe:" layoutX="10" layoutY="160"/>
    <Label fx:id="fraseLabel" layoutX="10" layoutY="190"/>

    <!-- Caixas de texto -->
    <TextField fx:id="processadorTextField" layoutX="140" layoutY="10"/>
    <TextField fx:id="ssdTextField" layoutX="140" layoutY="40"/>
    <TextField fx:id="gpuTextField" layoutX="140" layoutY="70"/>
    <TextField fx:id="ramTextField" layoutX="140" layoutY="100"/>
    <TextField fx:id="fonteTextField" layoutX="140" layoutY="130"/>
    <TextField fx:id="motherboardTextField" layoutX="140" layoutY="160"/>

    <!-- Botão -->
    <Button text="Montar" layoutX="330" layoutY="90" onAction="#gerarFrase"/>

    <!-- Imagem -->
    <ImageView fx:id="imageView" layoutX="10" layoutY="305"/>

</AnchorPane>
