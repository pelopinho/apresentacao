<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.caderno.Controller">

    <Label text="Quantidade de folhas:" layoutX="10" layoutY="10"/>
    <TextField fx:id="numeroFolhasTextField" layoutX="150" layoutY="10"/>

    <Label text="Cor:" layoutX="10" layoutY="70"/>
    <TextField fx:id="corTextField" layoutX="150" layoutY="70"/>

    <Label text="Tamanho da folha:" layoutX="10" layoutY="40"/>
    <TextField fx:id="tamanhoTextField" layoutX="150" layoutY="40"/>

    <Button text="Enviar" layoutX="10" layoutY="130" onAction="#gerarFrase"/>

    <Label fx:id="fraseLabel" layoutX="10" layoutY="160"/>

    <ImageView fx:id="imageView" layoutX="10" layoutY="200"/>

</AnchorPane>